<Window x:Class="TimeTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TimeTrackerApp.ViewModels"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Time Tracker"
        Height="700"
        Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.Lime.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <!-- Main Background -->
        <Grid Background="#FFF5F5F5"/>

        <!-- Main Grid Layout -->
        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Projects Panel -->
            <material:Card Grid.Column="0" Margin="0,0,8,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="PROJECTS"
                               Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,12"/>
                    <ListBox ItemsSource="{Binding Projects}"
                             SelectedItem="{Binding SelectedProject}"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                            <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Style="{DynamicResource MaterialDesignTextBox}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="Add Project"
                            Command="{Binding AddProjectCommand}"
                            Margin="0,16,0,0"
                            Style="{DynamicResource MaterialDesignRaisedButton}" Height="35" Width="256"/>
                </StackPanel>
            </material:Card>
            

            <!-- Tasks Panel -->
            <material:Card Grid.Column="1" Padding="24" Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="Auto"/>
                        <!-- Summary Bar -->
                        <RowDefinition Height="*"/>
                        <!-- Task List -->
                        <RowDefinition Height="Auto"/>
                        <!-- Add Task Button -->
                        <RowDefinition Height="Auto"/>
                        <!-- Timer Panel -->

                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!-- Tasks Header -->
                    <TextBlock Grid.Column="0" Text="{Binding SelectedProject.Name, UpdateSourceTrigger=PropertyChanged}"
                               Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16"/>

                        <Expander Grid.Column="1" Header="Completed Tasks"
                          IsExpanded="False"
                          Margin="0,12,0,0"
                          Background="#FFF"
                          Style="{StaticResource MaterialDesignExpander}">
                            <ItemsControl ItemsSource="{Binding SelectedProject.CompletedTasks}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="0,4"
                        Padding="8"
                        Background="LightGray"
                        CornerRadius="6">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                                                <TextBlock Text="{Binding ExpectedTime}"
                                   FontSize="12"
                                   Foreground="DarkSlateGray"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>

                    </Grid>
                    <Border Grid.Row="1"
                            Background="#E3F2FD"
                            Padding="12"
                            CornerRadius="6"
                            Margin="0,0,0,16">      
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="Estimated Time"
                               FontWeight="Bold"
                               FontSize="12"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>

                                <TextBlock Text="{Binding SelectedProject.EstimatedTime}" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="Tasks To Complete"
                               FontWeight="Bold"
                               FontSize="12"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedProject.Tasks.Count}" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="Elapsed Time"
                               FontWeight="Bold"
                               FontSize="12"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedProject.TimeSpent}" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>   
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="Completed Tasks"
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding SelectedProject.CompletedTasks.Count}" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>


                    <!-- Task List -->          
                    <ItemsControl Grid.Row="2" ItemsSource="{Binding Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,4"
                                        Padding="8"
                                        Background="LightCyan"  
                                        CornerRadius="6"
                                        SnapsToDevicePixels="True">
                                    
                                    <Grid VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>  <!-- Start Button -->
                                            <ColumnDefinition Width="3*"/>    <!-- Task Name -->
                                            <ColumnDefinition Width="Auto"/>  <!-- Expected Time -->
                                            <ColumnDefinition Width="Auto"/>  <!-- Completed -->
                                            <ColumnDefinition Width="Auto"/>  <!-- Delete -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Very Small Start Button -->
                                        <Button Content="▶"
                                                FontSize="10"
                                                Width="30"
                                                Height="24"
                                                Padding="0"
                                                Background="LightPink"
                                                BorderBrush="LightPink"
                                                Command="{Binding DataContext.StartTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource MaterialDesignFlatDarkBgButton}" 
                                                ToolTip="Start Task"
                                                Margin="4"
                                                Grid.Column="0" />

                                        <!-- Task Name (borderless look) -->
                                        <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="Transparent"
                                                 BorderBrush="LightGray"
                                                 BorderThickness="1"
                                                 Margin="4,0"
                                                 FontSize="14"
                                                 VerticalAlignment="Center"
                                                 Grid.Column="1"/>

                                        <!-- Expected Time (borderless look) -->
                                        <TextBox Text="{Binding ExpectedTime}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Margin="4,0"
                                                 Width="80"
                                                 FontSize="14"
                                                 VerticalAlignment="Center"
                                                 Grid.Column="2"/>

                                        <!-- Completed Checkbox -->
                                        <CheckBox IsChecked="{Binding IsCompleted}"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0"
                                                  Grid.Column="3"/>

                                        <!-- Delete Button -->
                                        <Button Content="Delete"
                                                Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource MaterialDesignToolButton}" 
                                                Margin="8,0"
                                                Grid.Column="4"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
            
                    <!-- Add Task Button -->
                    <Button Grid.Row="3"
                            Content="Add Task"
                            Command="{Binding AddTaskCommand}"
                            Style="{DynamicResource MaterialDesignRaisedButton}"
                            Margin="0,24,0,217"
                            HorizontalAlignment="Center" Grid.RowSpan="2" Width="274"/>

                    <!-- Timer Panel -->
                    <material:Card Grid.Row="4"
                                   Margin="0,24,0,0"
                                   Padding="24"
                                   Background="{DynamicResource PrimaryHueLightBrush}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding TimerProjectName}"
                                       Foreground="White"
                                       Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TimerTaskName}"
                                       Foreground="White"
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TimerCountdown}"
                                       Foreground="White"
                                       Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
                                       Margin="0,16"
                                       HorizontalAlignment="Center"/>
                            <Button Content="Stop Timer"
                                    Command="{Binding StopTimerCommand}"
                                    Style="{DynamicResource MaterialDesignRaisedButton}"
                                    HorizontalAlignment="Center"/>
                        </StackPanel>
                    </material:Card>
                </Grid>
            </material:Card>

            <!-- Fullscreen Timer Overlay -->
            <Grid Grid.ColumnSpan="2"
                  Visibility="{Binding IsTimerRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Background="#AA000000"
                  Panel.ZIndex="999">
                <material:Card VerticalAlignment="Center" HorizontalAlignment="Center" Padding="48" Background="{DynamicResource PrimaryHueDarkBrush}">
                    <StackPanel>
                        <TextBlock Text="{Binding TimerCountdown}"
                                   Style="{DynamicResource MaterialDesignHeadline2TextBlock}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TimerTaskName}"
                                   Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,12"/>
                        <Button Content="Stop"
                                Command="{Binding StopTimerCommand}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Margin="0,24,0,0"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </material:Card>
            </Grid>
        </Grid>
    </Grid>
</Window>
