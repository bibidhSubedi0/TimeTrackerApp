<Window x:Class="TimeTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TimeTrackerApp.ViewModels"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Time Tracker"
        Height="700"
        Width="1250"
        MinWidth="1250" MinHeight="700"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Green.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Brown Theme Colors -->
            <Color x:Key="ForestGreenColor">#4A3728</Color>
            <Color x:Key="SageColor">#8B7355</Color>
            <Color x:Key="MossColor">#A89078</Color>
            <Color x:Key="BirchColor">#F5F0EB</Color>
            <Color x:Key="WoodBrownColor">#5C4033</Color>
            <Color x:Key="SunlitLeafColor">#E6DFD5</Color>
            <!-- Very Light Brown -->

            <!-- Brushes -->
            <SolidColorBrush x:Key="ForestGreenBrush" Color="{StaticResource ForestGreenColor}"/>
            <SolidColorBrush x:Key="SageBrush" Color="{StaticResource SageColor}"/>
            <SolidColorBrush x:Key="MossBrush" Color="{StaticResource MossColor}"/>
            <SolidColorBrush x:Key="BirchBrush" Color="{StaticResource BirchColor}"/>
            <SolidColorBrush x:Key="WoodBrownBrush" Color="{StaticResource WoodBrownColor}"/>
            <SolidColorBrush x:Key="SunlitLeafBrush" Color="{StaticResource SunlitLeafColor}"/>

            <!-- Styles -->
            <Style x:Key="ForestCard" TargetType="material:Card">
                <Setter Property="material:ElevationAssist.Elevation" Value="Dp1"/>
                <Setter Property="Background" Value="{StaticResource BirchBrush}"/>
                <Setter Property="Margin" Value="8"/>
                <Setter Property="UniformCornerRadius" Value="16"/>
                <Setter Property="Opacity" Value="1"/>
                <!-- 
                <Style.Triggers>
                    
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1" 
                        Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="material:ElevationAssist.Elevation" Value="Dp3"/>
                    </Trigger>
                    
                </Style.Triggers>-->
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F5F0EB" Offset="0"/>
                <!-- Light warm brown -->
                <GradientStop Color="#E6DFD5" Offset="1"/>
                <!-- Slightly darker warm brown -->
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <material:Card Style="{StaticResource ForestCard}"
                          Margin="0,0,0,16"
                          Background="{StaticResource ForestGreenBrush}">
                <Grid Margin="16,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Logo/Name -->
                    <StackPanel Orientation="Horizontal">
                        <material:PackIcon Kind="Clock" 
                                         Width="24" 
                                         Height="24" 
                                         Foreground="{StaticResource BirchBrush}"
                                         VerticalAlignment="Center"/>
                        <TextBlock Text="Normids Time Tracker" 
                                 Margin="8,0,0,0"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Foreground="{StaticResource BirchBrush}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Navigation -->
                    <material:ColorZone Grid.Column="1" 
                                       Mode="Standard" 
                                       Margin="8" 
                                       CornerRadius="2" 
                                       Panel.ZIndex="1"
                                       Background="Transparent"
                                       HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                       Margin="4"
                                       IsChecked="{Binding ShowActiveTasks}"
                                       Content="ACTIVE TASKS"
                                       Foreground="{StaticResource BirchBrush}"/>
                            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}"
                                       Margin="4"
                                       IsChecked="{Binding ShowCompletedTasks}"
                                       Content="COMPLETED &amp; STATS"
                                       Foreground="{StaticResource BirchBrush}"/>
                        </StackPanel>
                    </material:ColorZone>

                    <!-- User Info -->
                    <StackPanel Grid.Column="2" 
                              Orientation="Horizontal"
                              Margin="16,0,0,0">
                        <material:PackIcon Kind="Account" 
                                         Width="24" 
                                         Height="24"
                                         Foreground="{StaticResource BirchBrush}"
                                         VerticalAlignment="Center"/>
                        <TextBlock Text="deafultUser" 
                                 Margin="8,0,0,0"
                                 Foreground="{StaticResource BirchBrush}"
                                 VerticalAlignment="Center"
                                 FontSize="14"/>
                    </StackPanel>
                </Grid>
            </material:Card>

            <!-- Main Content Area -->
            <material:TransitioningContent Grid.Row="1" 
                OpeningEffect="{material:TransitionEffect FadeIn}">
                <material:TransitioningContent.Style>
                    <Style TargetType="material:TransitioningContent">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowActiveTasks}" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="320"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Projects Panel -->
                                            <material:Card Grid.Column="0" 
                                                 Style="{StaticResource ForestCard}"
                                                 Background="#EADDCA"
                                                 Margin="0,0,16,0">
                                                <Grid Margin="16">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Grid Margin="0,0,0,16">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="PROJECTS"
                                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                             FontWeight="Bold"
                                                                   FontSize="20"
                                                             Foreground="{StaticResource ForestGreenBrush}"/>

                                                        <TextBlock Grid.Column="1"
                                                                Text="{Binding Projects.Count, StringFormat='{}{0} Total'}"
                                                                Foreground="{StaticResource SageBrush}"
                                                                FontWeight="Medium"
                                                                VerticalAlignment="Center"/>   
                                                       
                                                    </Grid>

                                                    <ListBox Grid.Row="1"
                                                        ItemsSource="{Binding Projects}"
                                                        SelectedItem="{Binding SelectedProject}"
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                        VirtualizingPanel.ScrollUnit="Pixel"
                                                        Padding="0,4">      
                                                        <ListBox.ItemContainerStyle>
                                                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                                                <Setter Property="Padding" Value="0"/>
                                                                <Setter Property="Margin" Value="0,4"/>
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Setter Property="MinHeight" Value="0"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsSelected" Value="True">
                                                                        <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ListBox.ItemContainerStyle>
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <material:Card UniformCornerRadius="8"
                                                                    Background="Transparent"
                                                                    material:ElevationAssist.Elevation="Dp0">
                                                                    <Grid Height="48">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                            BorderThickness="0"
                                                                            Background="Transparent"
                                                                            Foreground="{StaticResource ForestGreenBrush}"
                                                                            FontWeight="Medium"
                                                                            FontSize="14"
                                                                            Margin="16,0"
                                                                            VerticalContentAlignment="Center"
                                                                            Height="48">
                                                                            <TextBox.Style>
                                                                                <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBox.Style>
                                                                        </TextBox>

                                                                        <StackPanel Grid.Column="1" 
                                                                              Orientation="Horizontal"
                                                                              VerticalAlignment="Center"
                                                                              Margin="0,0,16,0">
                                                                            <TextBlock Text="{Binding Tasks.Count}"
                                                                                 Foreground="{StaticResource SageBrush}"
                                                                                 FontWeight="Medium"
                                                                                 VerticalAlignment="Center"
                                                                                 Margin="0,0,8,0"/>
                                                                            <material:PackIcon Kind="ChevronRight"
                                                                               Width="20"
                                                                               Height="20"
                                                                               Foreground="{StaticResource SageBrush}"
                                                                               VerticalAlignment="Center"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </material:Card>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>

                                                    <material:Card Grid.Row="2" 
                                                         Margin="0,8,0,0"
                                                         UniformCornerRadius="8"
                                                         Background="#F0E9E4">
                                                        <Grid Height="48"
                                                            Background="#F0E9E4">
                                                            <TextBox Text="{Binding NewProjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                Style="{StaticResource MaterialDesignTextBox}"
                                                                Background="#F0E9E4"
                                                                BorderThickness="0"
                                                                Foreground="{StaticResource ForestGreenBrush}"
                                                                FontSize="14"
                                                                Margin="16,0"
                                                                VerticalContentAlignment="Center"
                                                                material:HintAssist.Hint="+ Add a new project"
                                                                material:TextFieldAssist.HasClearButton="True">
                                                                <TextBox.InputBindings>
                                                                    <KeyBinding Key="Return" 
                                                                        Command="{Binding EnterKeyCommand}" 
                                                                        CommandParameter="project"/>
                                                                </TextBox.InputBindings>
                                                            </TextBox>
                                                        </Grid>
                                                    </material:Card>
                                                </Grid>
                                            </material:Card>
                                            <!-- Tasks Panel -->
                                            <material:Card Grid.Column="1" 
                                                         Style="{StaticResource ForestCard}">
                                                <Grid Margin="24">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Project Header with Progress -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel>
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                                                         Text="{Binding SelectedProject.Name}"
                                                                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                                         FontWeight="Medium"
                                                                         Foreground="{StaticResource ForestGreenBrush}"/>

                                                                <ProgressBar Grid.Row="1" 
                                                                           Value="{Binding SelectedProject.CompletionPercentage}"
                                                                           Maximum="100"
                                                                           Height="4"
                                                                           Margin="0,8,0,0"
                                                                           
                                                                           Background="{StaticResource MossBrush}"
                                                                           Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Grid>

                                                    <!-- Summary Cards -->
                                                    <UniformGrid Grid.Row="1" Columns="4" Margin="0,24">
                                                        <material:Card Style="{StaticResource ForestCard}" 
                                                                     Margin="4"
                                                                     Background="{StaticResource SunlitLeafBrush}">
                                                            <StackPanel Margin="16">
                                                                <TextBlock Text="Estimated Time"
                                                                         Foreground="{StaticResource ForestGreenBrush}"/>
                                                                <TextBlock Text="{Binding SelectedProject.EstimatedTime}"
                                                                         FontSize="24"
                                                                         FontWeight="Medium"
                                                                         Foreground="{StaticResource ForestGreenBrush}"/>
                                                            </StackPanel>
                                                        </material:Card>

                                                        <material:Card Style="{StaticResource ForestCard}" 
                                                                     Margin="4"
                                                                     Background="{StaticResource SunlitLeafBrush}">
                                                            <StackPanel Margin="16">
                                                                <TextBlock Text="Tasks To Complete"
                                                                         Foreground="{StaticResource ForestGreenBrush}"/>
                                                                <TextBlock Text="{Binding SelectedProject.Tasks.Count}"
                                                                         FontSize="24"
                                                                         FontWeight="Medium"
                                                                         Foreground="{StaticResource ForestGreenBrush}"/>
                                                            </StackPanel>
                                                        </material:Card>

                                                        <material:Card Style="{StaticResource ForestCard}" 
                                                                     Margin="4"
                                                                     Background="{StaticResource SunlitLeafBrush}">
                                                            <StackPanel Margin="16">
                                                                <TextBlock Text="Elapsed Time"
                                                                         Foreground="{StaticResource ForestGreenBrush}"/>
                                                                <TextBlock Text="{Binding SelectedProject.TimeSpent}"
                                                                         FontSize="24"
                                                                         FontWeight="Medium"
                                                                         Foreground="{StaticResource ForestGreenBrush}"/>
                                                            </StackPanel>
                                                        </material:Card>

                                                        <material:Card Style="{StaticResource ForestCard}" 
                                                                     Margin="4"
                                                                     Background="{StaticResource SunlitLeafBrush}">
                                                            <StackPanel Margin="16">
                                                                <TextBlock Text="Completed Tasks"
                                                                         Foreground="{StaticResource ForestGreenBrush}"/>
                                                                <TextBlock Text="{Binding SelectedProject.CompletedTasks.Count}"
                                                                         FontSize="24"
                                                                         FontWeight="Medium"
                                                                         Foreground="{StaticResource ForestGreenBrush}"/>
                                                            </StackPanel>
                                                        </material:Card>
                                                    </UniformGrid>

                                                    <!-- Add Task -->
                                                    <Grid Grid.Row="2" Margin="0,0,0,16">
                                                        <material:Card Style="{StaticResource ForestCard}"
                                                                     Background="White">
                                                            <Grid Margin="16,8">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="160"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBox Text="{Binding NewTaskName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                         Style="{StaticResource MaterialDesignTextBox}"
                                                                         BorderThickness="0"
                                                                         Background="Transparent"
                                                                         Foreground="{StaticResource ForestGreenBrush}"
                                                                         material:HintAssist.Hint="+ Add a task">
                                                                    <TextBox.InputBindings>
                                                                        <KeyBinding Key="Return" Command="{Binding EnterKeyCommand}" CommandParameter="task"/>
                                                                    </TextBox.InputBindings>
                                                                </TextBox>

                                                                <!-- Expected Time TextBox -->
                                                                <TextBox Grid.Column="1"
                                                                         Text="{Binding NewTaskExpectedTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                         Style="{StaticResource MaterialDesignTextBox}"
                                                                         BorderThickness="0"
                                                                         Background="Transparent"
                                                                         Foreground="{StaticResource ForestGreenBrush}"
                                                                         material:HintAssist.Hint="Expected Time"
                                                                         Margin="16,0">
                                                                    <TextBox.InputBindings>
                                                                        <KeyBinding Key="Return" Command="{Binding EnterKeyCommand}" CommandParameter="task"/>
                                                                    </TextBox.InputBindings>
                                                                </TextBox>
                                                                <Button Grid.Column="2"
                                                                        Content="Add Task"
                                                                        Command="{Binding AddTaskCommand}"
                                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                                        Foreground="{StaticResource ForestGreenBrush}"/>
                                                            </Grid>
                                                        </material:Card>
                                                    </Grid>

                                                    <!-- Task List -->
                                                    <ScrollViewer Grid.Row="3" 
                                                                VerticalScrollBarVisibility="Auto" 
                                                                HorizontalScrollBarVisibility="Disabled">
                                                        <ItemsControl ItemsSource="{Binding Tasks}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <material:Card Style="{StaticResource ForestCard}"
                                                                                 Margin="0,4"
                                                                                 Background="White">
                                                                        <Grid Margin="16,8">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>

                                                                            <Button Grid.Column="0"
                                                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                                                    Command="{Binding DataContext.StartTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                    CommandParameter="{Binding}"
                                                                                    Background="{StaticResource SageBrush}"
                                                                                    Foreground="White"
                                                                                    Width="32" Height="32"
                                                                                    Padding="0">
                                                                                <material:PackIcon Kind="Play" Width="16" Height="16"/>
                                                                            </Button>

                                                                            <TextBox Grid.Column="1"
                                                                                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                                    Style="{StaticResource MaterialDesignTextBox}"
                                                                                    BorderThickness="0"
                                                                                    Background="Transparent"
                                                                                    Foreground="{StaticResource ForestGreenBrush}"
                                                                                    FontSize="14"
                                                                                    Margin="16,0"/>

                                                                            <TextBox Grid.Column="2"
                                                                                    Text="{Binding ExpectedTime}"
                                                                                    Style="{StaticResource MaterialDesignTextBox}"
                                                                                    BorderThickness="0"
                                                                                    Background="Transparent"
                                                                                    Foreground="{StaticResource ForestGreenBrush}"
                                                                                    Width="100"
                                                                                    FontSize="14"
                                                                                    Margin="8,0"/>

                                                                            <CheckBox Grid.Column="3"
                                                                                     IsChecked="{Binding IsCompleted}"
                                                                                     Style="{StaticResource MaterialDesignCheckBox}"
                                                                                     Margin="16,0"/>

                                                                            <Button Grid.Column="4"
                                                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                                                    Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                    CommandParameter="{Binding}"
                                                                                    Foreground="{StaticResource WoodBrownBrush}">
                                                                                <material:PackIcon Kind="Delete" Width="20" Height="20"/>
                                                                            </Button>
                                                                        </Grid>
                                                                    </material:Card>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </ScrollViewer>
                                                </Grid>
                                            </material:Card>
                                        </Grid>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding ShowCompletedTasks}" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <material:Card Style="{StaticResource ForestCard}">
                                            <Grid Margin="24">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <!-- Header -->
                                                <TextBlock Text="Completed Tasks &amp; Statistics"
                                                         Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                         FontWeight="Medium"
                                                         Foreground="{StaticResource ForestGreenBrush}"/>

                                                <!-- Stats Cards -->
                                                <UniformGrid Grid.Row="1" Columns="3" Margin="0,24">
                                                    <!-- Total Completed Tasks -->
                                                    <material:Card Style="{StaticResource ForestCard}" 
                                                                 Margin="4"
                                                                 Background="{StaticResource SunlitLeafBrush}">
                                                        <StackPanel Margin="16">
                                                            <TextBlock Text="Total Completed Tasks"
                                                                     Foreground="{StaticResource ForestGreenBrush}"/>
                                                            <TextBlock Text="{Binding AllCompletedTasks.Count}"
                                                                     FontSize="24"
                                                                     FontWeight="Medium"
                                                                     Foreground="{StaticResource ForestGreenBrush}"/>
                                                        </StackPanel>
                                                    </material:Card>

                                                    <!-- Total Time Spent -->
                                                    <material:Card Style="{StaticResource ForestCard}" 
                                                                 Margin="4"
                                                                 Background="{StaticResource SunlitLeafBrush}">
                                                        <StackPanel Margin="16">
                                                            <TextBlock Text="Total Time Spent"
                                                                     Foreground="{StaticResource ForestGreenBrush}"/>
                                                            <TextBlock Text="{Binding TotalTimeSpent}"
                                                                     FontSize="24"
                                                                     FontWeight="Medium"
                                                                     Foreground="{StaticResource ForestGreenBrush}"/>
                                                        </StackPanel>
                                                    </material:Card>

                                                    <!-- Completion Rate -->
                                                    <material:Card Style="{StaticResource ForestCard}" 
                                                                 Margin="4"
                                                                 Background="{StaticResource SunlitLeafBrush}">
                                                        <StackPanel Margin="16">
                                                            <TextBlock Text="Completion Rate"
                                                                     Foreground="{StaticResource ForestGreenBrush}"/>
                                                            <TextBlock Text="{Binding CompletionRate}"
                                                                     FontSize="24"
                                                                     FontWeight="Medium"
                                                                     Foreground="{StaticResource ForestGreenBrush}"/>
                                                        </StackPanel>
                                                    </material:Card>
                                                </UniformGrid>

                                                <!-- Completed Tasks List -->
                                                <ScrollViewer Grid.Row="2" 
                                                            VerticalScrollBarVisibility="Auto"
                                                            Margin="0,16,0,0">
                                                    <ItemsControl ItemsSource="{Binding AllCompletedTasks}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <material:Card Style="{StaticResource ForestCard}"
                                                                             Margin="0,4"
                                                                             Background="White">
                                                                    <Grid Margin="16,8">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <TextBlock Text="{Binding Name}"
                                                                                 FontWeight="Medium"
                                                                                 Foreground="{StaticResource ForestGreenBrush}"/>

                                                                        <TextBlock Grid.Column="1"
                                                                                 Text="{Binding ExpectedTime}"
                                                                                 Foreground="{StaticResource SageBrush}"
                                                                                 Margin="16,0"/>
                                                                        <TextBlock Grid.Column="2" 
                                                                                   Text="{Binding CompletedDate}" />

                                                                        <material:PackIcon Grid.Column="3"
                                                                                         Kind="CheckCircle"
                                                                                         Foreground="{StaticResource SageBrush}"
                                                                                         Width="20"
                                                                                         Height="20"/>
                                                                    </Grid>
                                                                </material:Card>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>
                                            </Grid>
                                        </material:Card>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </material:TransitioningContent.Style>
            </material:TransitioningContent>
        </Grid>

        <!-- Timer Overlay -->
        <Grid Visibility="{Binding IsTimerRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="999">
            <Grid.Background>
                <SolidColorBrush Color="{StaticResource ForestGreenColor}" Opacity="0.9"/>
            </Grid.Background>

            <material:Card VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         UniformCornerRadius="24"
                         Background="{StaticResource SageBrush}"
                         MaxWidth="600">
                <Grid Margin="48">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Width="300" Height="300">
                        <Ellipse Fill="Transparent"
                                Stroke="{StaticResource MossBrush}"
                                StrokeThickness="8"/>

                        <ProgressBar Value="{Binding TimerProgress}"
                                   Maximum="100"
                                   Style="{StaticResource MaterialDesignCircularProgressBar}"
                                   IsIndeterminate="False"
                                     Width="300"
                                     Height="300"
                                   Foreground="{StaticResource BirchBrush}"/>

                        <TextBlock Text="{Binding TimerCountdown}"
                                 Style="{StaticResource MaterialDesignHeadline2TextBlock}"
                                 Foreground="{StaticResource BirchBrush}"
                                   FontSize="40"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <TextBlock Grid.Row="1"
                             Text="{Binding TimerTaskName}"
                             Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                             Foreground="{StaticResource BirchBrush}"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,32"/>

                    <Button Grid.Row="2"
                            Content="STOP TIMER"
                            Command="{Binding StopTimerCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="{StaticResource BirchBrush}"
                            Foreground="{StaticResource ForestGreenBrush}"
                            Height="48"
                            material:ButtonAssist.CornerRadius="24"/>
                </Grid>
            </material:Card>
        </Grid>
    </Grid>
</Window>