<Window x:Class="TimeTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TimeTrackerApp.ViewModels"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Time Tracker"
        Height="700"
        Width="1250"
        MinWidth="1250" MinHeight="700"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Green.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Forest Theme Colors -->
            <Color x:Key="ForestGreenColor">#2C5530</Color>
            <Color x:Key="SageColor">#87A878</Color>
            <Color x:Key="MossColor">#A4B494</Color>
            <Color x:Key="BirchColor">#F2EFE9</Color>
            <Color x:Key="WoodBrownColor">#6B4423</Color>
            <Color x:Key="SunlitLeafColor">#D4E6B5</Color>

            <!-- Brushes -->
            <SolidColorBrush x:Key="ForestGreenBrush" Color="{StaticResource ForestGreenColor}"/>
            <SolidColorBrush x:Key="SageBrush" Color="{StaticResource SageColor}"/>
            <SolidColorBrush x:Key="MossBrush" Color="{StaticResource MossColor}"/>
            <SolidColorBrush x:Key="BirchBrush" Color="{StaticResource BirchColor}"/>
            <SolidColorBrush x:Key="WoodBrownBrush" Color="{StaticResource WoodBrownColor}"/>
            <SolidColorBrush x:Key="SunlitLeafBrush" Color="{StaticResource SunlitLeafColor}"/>

            <!-- Styles -->
            <Style x:Key="ForestCard" TargetType="material:Card">
                <Setter Property="material:ElevationAssist.Elevation" Value="Dp1"/>
                <Setter Property="Background" Value="{StaticResource BirchBrush}"/>
                <Setter Property="Margin" Value="8"/>
                <Setter Property="UniformCornerRadius" Value="16"/>
                <Setter Property="Opacity" Value="0"/>
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1" 
                        Duration="0:0:0.2"/>
                                <!-- Changed from 0.4 to 0.2 -->
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="material:ElevationAssist.Elevation" Value="Dp3"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F2EFE9" Offset="0"/>
                <GradientStop Color="#E7EDE4" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <material:Card Style="{StaticResource ForestCard}"
                          Margin="0,0,0,16"
                          Background="{StaticResource ForestGreenBrush}">
                <Grid Margin="16,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Logo/Name -->
                    <StackPanel Orientation="Horizontal">
                        <material:PackIcon Kind="Clock" 
                                         Width="24" 
                                         Height="24" 
                                         Foreground="{StaticResource BirchBrush}"
                                         VerticalAlignment="Center"/>
                        <TextBlock Text="Gatilo Time Tracker" 
                                 Margin="8,0,0,0"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Foreground="{StaticResource BirchBrush}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- User Info -->
                    <StackPanel Orientation="Horizontal" 
                              Grid.Column="1"
                              Margin="16,0,0,0">
                        <material:PackIcon Kind="Account" 
                                         Width="24" 
                                         Height="24"
                                         Foreground="{StaticResource BirchBrush}"
                                         VerticalAlignment="Center"/>
                        <TextBlock Text="deafultUser" 
                                 Margin="8,0,0,0"
                                 Foreground="{StaticResource BirchBrush}"
                                 VerticalAlignment="Center"
                                 FontSize="14"/>
                    </StackPanel>
                </Grid>
            </material:Card>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Projects Panel -->
                <material:Card Grid.Column="0" 
                              Style="{StaticResource ForestCard}"
                              Margin="0,0,8,0">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Projects Header with Stats -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="PROJECTS"
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                     FontWeight="Medium"
                                     Foreground="{StaticResource ForestGreenBrush}"/>

                            <TextBlock Grid.Column="1"
                                     Text="{Binding Projects.Count, StringFormat='{}{0} Total'}"
                                     Foreground="{StaticResource SageBrush}"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        

                        <!-- Projects List -->
                        <Border Grid.Row="2" 
                                Background="#F8FAF7" 
                                CornerRadius="12"
                                Padding="8">
                            <ListBox ItemsSource="{Binding Projects}"
                                    SelectedItem="{Binding SelectedProject}"
                                    BorderThickness="0"
                                    Background="Transparent">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <material:Card Margin="0,4"
                                                     UniformCornerRadius="8"
                                                     Background="White">
                                            <Grid Margin="12,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        Foreground="{StaticResource ForestGreenBrush}"
                                                        FontSize="14"/>

                                                <StackPanel Grid.Column="1" 
                                                          Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Tasks.Count}"
                                                             Foreground="{StaticResource SageBrush}"
                                                             VerticalAlignment="Center"
                                                             Margin="8,0"/>
                                                    <material:PackIcon Kind="ChevronRight"
                                                                     Foreground="{StaticResource MossBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </material:Card>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Add Project -->
                        <Grid Grid.Row="3" Margin="0,16,0,0">
                            <TextBox Text="{Binding NewProjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    Background="White"
                                    Foreground="{StaticResource ForestGreenBrush}"
                                    material:HintAssist.Hint="+ Add a new Project"
                                    material:TextFieldAssist.HasClearButton="True"
                                    KeyDown="ProjectNameTextBox_KeyDown"/>
                        </Grid>
                    </Grid>
                </material:Card>

                <!-- Tasks Panel -->
                <material:Card Grid.Column="1" 
                              Style="{StaticResource ForestCard}">
                    <Grid Margin="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Project Header with Progress -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="{Binding SelectedProject.Name}"
                  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                  FontWeight="Medium"
                  Foreground="{StaticResource ForestGreenBrush}"/>

                                <ProgressBar Value="{Binding SelectedProject.CompletionPercentage}"
                    Maximum="100"
                    Height="4"
                    Margin="0,8,0,0"
                    Foreground="{StaticResource SageBrush}"
                    Background="{StaticResource MossBrush}"
                    Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" 
                Orientation="Horizontal">
                                <!-- Keep only this one percentage display -->
                                <TextBlock Text="{Binding SelectedProject.CompletionPercentage, StringFormat={}{0:0}% Complete}"
                  Foreground="{StaticResource SageBrush}"
                  VerticalAlignment="Center"
                  Margin="16,0"/>

                                <!-- Expander for completed tasks -->
                                <Expander Style="{StaticResource MaterialDesignExpander}"
                  BorderThickness="0"
                  Foreground="{StaticResource ForestGreenBrush}"
                  Background="Transparent">
                                    <Expander.Header>
                                        <TextBlock Text="Completed Tasks" 
                          Foreground="{StaticResource ForestGreenBrush}"/>
                                    </Expander.Header>

                                    <Expander.Content>
                                        <material:Card Style="{StaticResource ForestCard}"
                          Margin="0,8,0,0"
                          MaxHeight="300">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                <ItemsControl ItemsSource="{Binding SelectedProject.CompletedTasks}"
                                Margin="8">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <material:Card Margin="0,4"
                                             UniformCornerRadius="8"
                                             Background="White">
                                                                <Grid Margin="12,8">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <StackPanel>
                                                                        <TextBlock Text="{Binding Name}" 
                                                     FontWeight="Medium"
                                                     Foreground="{StaticResource ForestGreenBrush}"/>
                                                                        <TextBlock Text="{Binding ExpectedTime}" 
                                                     Foreground="{StaticResource SageBrush}"
                                                     FontSize="12"
                                                     Margin="0,4,0,0"/>
                                                                    </StackPanel>

                                                                    <material:PackIcon Grid.Column="1" 
                                                         Kind="CheckCircle" 
                                                         Foreground="{StaticResource SageBrush}"
                                                         VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </material:Card>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </ScrollViewer>
                                        </material:Card>
                                    </Expander.Content>
                                </Expander>
                            </StackPanel>
                        </Grid>

                        <!-- Summary Cards -->
                        <UniformGrid Grid.Row="1" Columns="4" Margin="0,24">
                            <material:Card Style="{StaticResource ForestCard}" 
                                         Margin="4"
                                         Background="{StaticResource SunlitLeafBrush}">
                                <StackPanel Margin="16">
                                    <TextBlock Text="Estimated Time"
                                             Foreground="{StaticResource ForestGreenBrush}"/>
                                    <TextBlock Text="{Binding SelectedProject.EstimatedTime}"
                                             FontSize="24"
                                             FontWeight="Medium"
                                             Foreground="{StaticResource ForestGreenBrush}"/>
                                </StackPanel>
                            </material:Card>

                            <material:Card Style="{StaticResource ForestCard}" 
                                         Margin="4"
                                         Background="{StaticResource SunlitLeafBrush}">
                                <StackPanel Margin="16">
                                    <TextBlock Text="Tasks To Complete"
                                             Foreground="{StaticResource ForestGreenBrush}"/>
                                    <TextBlock Text="{Binding SelectedProject.Tasks.Count}"
                                             FontSize="24"
                                             FontWeight="Medium"
                                             Foreground="{StaticResource ForestGreenBrush}"/>
                                </StackPanel>
                            </material:Card>

                            <material:Card Style="{StaticResource ForestCard}" 
                                         Margin="4"
                                         Background="{StaticResource SunlitLeafBrush}">
                                <StackPanel Margin="16">
                                    <TextBlock Text="Elapsed Time"
                                             Foreground="{StaticResource ForestGreenBrush}"/>
                                    <TextBlock Text="{Binding SelectedProject.TimeSpent}"
                                             FontSize="24"
                                             FontWeight="Medium"
                                             Foreground="{StaticResource ForestGreenBrush}"/>
                                </StackPanel>
                            </material:Card>

                            <material:Card Style="{StaticResource ForestCard}" 
                                         Margin="4"
                                         Background="{StaticResource SunlitLeafBrush}">
                                <StackPanel Margin="16">
                                    <TextBlock Text="Completed Tasks"
                                             Foreground="{StaticResource ForestGreenBrush}"/>
                                    <TextBlock Text="{Binding SelectedProject.CompletedTasks.Count}"
                                             FontSize="24"
                                             FontWeight="Medium"
                                             Foreground="{StaticResource ForestGreenBrush}"/>
                                </StackPanel>
                            </material:Card>
                        </UniformGrid>

                        <!-- Add Task -->
                        <Grid Grid.Row="2" Margin="0,0,0,16">
                            <material:Card Style="{StaticResource ForestCard}"
                                         Background="White">
                                <Grid Margin="16,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Text="{Binding NewTaskName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource MaterialDesignTextBox}"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            Foreground="{StaticResource ForestGreenBrush}"
                                            material:HintAssist.Hint="+ Add a task"
                                            KeyDown="TaskNameTextBox_KeyDown"/>

                                    <TextBox Grid.Column="1"
                                            Text="{Binding NewTaskExpectedTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource MaterialDesignTextBox}"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            Foreground="{StaticResource ForestGreenBrush}"
                                            material:HintAssist.Hint="Expected Time"
                                            Margin="16,0"
                                            KeyDown="TaskNameTextBox_KeyDown"/>

                                    <Button Grid.Column="2"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Content="Add Task"
                                            Foreground="{StaticResource ForestGreenBrush}"/>
                                </Grid>
                            </material:Card>
                        </Grid>

                        <!-- Task List -->
                        <ScrollViewer Grid.Row="3" 
                                    VerticalScrollBarVisibility="Auto" 
                                    HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Tasks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <material:Card Style="{StaticResource ForestCard}"
                                                     Margin="0,4"
                                                     Background="White">
                                            <Grid Margin="16,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Command="{Binding DataContext.StartTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Background="{StaticResource SageBrush}"
                                                        Foreground="White"
                                                        Width="32" Height="32"
                                                        Padding="0">
                                                    <material:PackIcon Kind="Play" Width="16" Height="16"/>
                                                </Button>

                                                <TextBox Grid.Column="1"
                                                        Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Style="{StaticResource MaterialDesignTextBox}"
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        Foreground="{StaticResource ForestGreenBrush}"
                                                        FontSize="14"
                                                        Margin="16,0"/>

                                                <TextBox Grid.Column="2"
                                                        Text="{Binding ExpectedTime}"
                                                        Style="{StaticResource MaterialDesignTextBox}"
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        Foreground="{StaticResource ForestGreenBrush}"
                                                        Width="100"
                                                        FontSize="14"
                                                        Margin="8,0"/>

                                                <CheckBox Grid.Column="3"
                                                         IsChecked="{Binding IsCompleted}"
                                                         Style="{StaticResource MaterialDesignCheckBox}"
                                                         Margin="16,0"/>

                                                <Button Grid.Column="4"
                                                        Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Foreground="{StaticResource WoodBrownBrush}">
                                                    <material:PackIcon Kind="Delete" Width="20" Height="20"/>
                                                </Button>
                                            </Grid>
                                        </material:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </material:Card>
            </Grid>
        </Grid>

        <!-- Timer Overlay -->
        <Grid Visibility="{Binding IsTimerRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="999">
            <Grid.Background>
                <SolidColorBrush Color="{StaticResource ForestGreenColor}" Opacity="0.9"/>
            </Grid.Background>

            <material:Card VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         UniformCornerRadius="24"
                         Background="{StaticResource SageBrush}"
                         MaxWidth="600">
                <Grid Margin="48">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Width="300" Height="300">
                        <Ellipse Fill="Transparent"
                                Stroke="{StaticResource MossBrush}"
                                StrokeThickness="8"/>

                        <ProgressBar Value="{Binding TimerProgress}"
                                   Maximum="100"
                                   Style="{StaticResource MaterialDesignCircularProgressBar}"
                                   IsIndeterminate="False"
                                     Width="300"
                                     Height="300"
                                   Foreground="{StaticResource BirchBrush}"/>

                        <TextBlock Text="{Binding TimerCountdown}"
                                 Style="{StaticResource MaterialDesignHeadline2TextBlock}"
                                 Foreground="{StaticResource BirchBrush}"
                                   FontSize="40"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <TextBlock Grid.Row="1"
                             Text="{Binding TimerTaskName}"
                             Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                             Foreground="{StaticResource BirchBrush}"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,32"/>

                    <Button Grid.Row="2"
                            Content="STOP TIMER"
                            Command="{Binding StopTimerCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="{StaticResource BirchBrush}"
                            Foreground="{StaticResource ForestGreenBrush}"
                            Height="48"
                            material:ButtonAssist.CornerRadius="24"/>
                </Grid>
            </material:Card>
        </Grid>
    </Grid>
</Window>