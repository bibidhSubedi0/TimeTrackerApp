<Window x:Class="TimeTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TimeTrackerApp.ViewModels"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Time Tracker"
        Height="700"
        Width="1250"
        MinWidth="1250" MinHeight="700"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        Background="#FFF8F3"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>
                <!-- Using warm browns and terracotta colors -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Brown.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.DeepOrange.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Custom Colors -->
            <Color x:Key="WarmBackground">#FFF8F3</Color>
            <Color x:Key="CozyBrown">#8B7355</Color>
            <Color x:Key="SoftTerracotta">#E8B4A2</Color>
            <Color x:Key="WarmGrey">#A69B97</Color>
            <Color x:Key="CreamWhite">#FDF5E6</Color>

            <!-- Custom Brushes -->
            <SolidColorBrush x:Key="WarmBackgroundBrush" Color="{StaticResource WarmBackground}"/>
            <SolidColorBrush x:Key="CozyBrownBrush" Color="{StaticResource CozyBrown}"/>
            <SolidColorBrush x:Key="SoftTerracottaBrush" Color="{StaticResource SoftTerracotta}"/>
            <SolidColorBrush x:Key="WarmGreyBrush" Color="{StaticResource WarmGrey}"/>
            <SolidColorBrush x:Key="CreamWhiteBrush" Color="{StaticResource CreamWhite}"/>

            <!-- Custom Styles -->
            <Style x:Key="CozyCard" TargetType="material:Card">
                <Setter Property="material:ElevationAssist.Elevation" Value="Dp1"/>
                <Setter Property="Background" Value="{StaticResource CreamWhiteBrush}"/>
                <Setter Property="Margin" Value="8"/>
                <Setter Property="UniformCornerRadius" Value="16"/>
            </Style>

            <Style x:Key="CozyTextBlock" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="{StaticResource CozyBrownBrush}"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <Style x:Key="CozyValueBlock" TargetType="TextBlock" BasedOn="{StaticResource CozyTextBlock}">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,4,0,0"/>
            </Style>

            <Style x:Key="CozyButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                <Setter Property="Background" Value="{StaticResource SoftTerracottaBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="material:ButtonAssist.CornerRadius" Value="8"/>
                <Setter Property="Height" Value="40"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFF8F3" Offset="0"/>
                <GradientStop Color="#FFF1E6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Projects Panel -->
            <material:Card Grid.Column="0" 
                          Style="{StaticResource CozyCard}"
                          Margin="0,0,8,0">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="PROJECTS"
                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                             FontWeight="Medium"
                             Foreground="{StaticResource CozyBrownBrush}"
                             Margin="0,0,0,16"/>

                    <Border Grid.Row="1" 
                            Background="#FFF8F3" 
                            CornerRadius="12"
                            Padding="8">
                        <ListBox ItemsSource="{Binding Projects}"
                                SelectedItem="{Binding SelectedProject}"
                                BorderThickness="0"
                                Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="12,8"
                                            BorderThickness="0"
                                            Background="{StaticResource CreamWhiteBrush}"
                                            Foreground="{StaticResource CozyBrownBrush}"
                                            Style="{StaticResource MaterialDesignTextBox}"
                                            FontSize="14"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <TextBox Grid.Row="2"
                             Text="{Binding NewProjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,16,0,0"
                             Background="{StaticResource CreamWhiteBrush}"
                             Foreground="{StaticResource CozyBrownBrush}"
                             material:HintAssist.Hint="+ Add a new Project"
                             material:TextFieldAssist.HasClearButton="True"
                             KeyDown="ProjectNameTextBox_KeyDown"/>
                </Grid>
            </material:Card>

            <!-- Tasks Panel -->
            <material:Card Grid.Column="1" 
                          Style="{StaticResource CozyCard}">
                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding SelectedProject.Name}"
                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                 FontWeight="Medium"
                                 Foreground="{StaticResource CozyBrownBrush}"
                                 Margin="0,0,0,24"/>

                        <Expander Grid.Column="1" 
                                 Header="Completed Tasks"
                                 Style="{StaticResource MaterialDesignExpander}"
                                 BorderThickness="0"
                                 Foreground="{StaticResource CozyBrownBrush}"
                                 Background="Transparent">
                            <ItemsControl ItemsSource="{Binding SelectedProject.CompletedTasks}"
                                        Margin="0,8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,4" 
                                                Padding="12,8" 
                                                Background="{StaticResource WarmBackgroundBrush}"
                                                CornerRadius="8">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" 
                                                         FontWeight="Medium"
                                                         Foreground="{StaticResource CozyBrownBrush}"/>
                                                <TextBlock Text="{Binding ExpectedTime}" 
                                                         Foreground="{StaticResource WarmGreyBrush}"
                                                         FontSize="12"
                                                         Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </Grid>

                    <!-- Summary Bar -->
                    <material:Card Grid.Row="1" 
                                 Style="{StaticResource CozyCard}"
                                 Margin="0,0,0,24"
                                 Background="{StaticResource WarmBackgroundBrush}">
                        <Grid Margin="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Estimated Time"
                                         Style="{StaticResource CozyTextBlock}"/>
                                <TextBlock Text="{Binding SelectedProject.EstimatedTime}"
                                         Style="{StaticResource CozyValueBlock}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Tasks To Complete"
                                         Style="{StaticResource CozyTextBlock}"/>
                                <TextBlock Text="{Binding SelectedProject.Tasks.Count}"
                                         Style="{StaticResource CozyValueBlock}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Elapsed Time"
                                         Style="{StaticResource CozyTextBlock}"/>
                                <TextBlock Text="{Binding SelectedProject.TimeSpent}"
                                         Style="{StaticResource CozyValueBlock}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Completed Tasks"
                                         Style="{StaticResource CozyTextBlock}"/>
                                <TextBlock Text="{Binding SelectedProject.CompletedTasks.Count}"
                                         Style="{StaticResource CozyValueBlock}"/>
                            </StackPanel>
                        </Grid>
                    </material:Card>

                    <!-- Add Task Panel -->
                    <Grid Grid.Row="2" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding NewTaskName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Background="{StaticResource CreamWhiteBrush}"
                                Foreground="{StaticResource CozyBrownBrush}"
                                material:HintAssist.Hint="+ Add a task"
                                material:TextFieldAssist.HasClearButton="True"
                                Margin="0,0,8,0"
                                KeyDown="TaskNameTextBox_KeyDown"/>

                        <TextBox Grid.Column="1"
                                Text="{Binding NewTaskExpectedTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Background="{StaticResource CreamWhiteBrush}"
                                Foreground="{StaticResource CozyBrownBrush}"
                                material:HintAssist.Hint="Expected Time"
                                KeyDown="TaskNameTextBox_KeyDown"/>
                    </Grid>

                    <!-- Task List -->
                    <ScrollViewer Grid.Row="3" 
                                VerticalScrollBarVisibility="Auto" 
                                HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Tasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <material:Card Style="{StaticResource CozyCard}"
                                                 Margin="0,4">
                                        <Grid Margin="16,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Button Grid.Column="0"
                                                    Style="{StaticResource CozyButton}"
                                                    Command="{Binding DataContext.StartTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Width="32" Height="32">
                                                <material:PackIcon Kind="Play" Width="16" Height="16"/>
                                            </Button>

                                            <TextBox Grid.Column="1"
                                                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Style="{StaticResource MaterialDesignTextBox}"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    Foreground="{StaticResource CozyBrownBrush}"
                                                    FontSize="14"
                                                    Margin="16,0"/>

                                            <TextBox Grid.Column="2"
                                                    Text="{Binding ExpectedTime}"
                                                    Style="{StaticResource MaterialDesignTextBox}"
                                                    BorderThickness="0"
                                                    Background="Transparent"
                                                    Foreground="{StaticResource CozyBrownBrush}"
                                                    Width="100"
                                                    FontSize="14"
                                                    Margin="8,0"/>

                                            <CheckBox Grid.Column="3"
                                                     IsChecked="{Binding IsCompleted}"
                                                     Style="{StaticResource MaterialDesignCheckBox}"
                                                     Margin="16,0"/>

                                            <Button Grid.Column="4"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Foreground="{StaticResource WarmGreyBrush}">
                                                <material:PackIcon Kind="Delete" Width="20" Height="20"/>
                                            </Button>
                                        </Grid>
                                    </material:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </material:Card>

            <!-- Timer Overlay (Fixed) -->
            <Grid Grid.ColumnSpan="2"
                  Visibility="{Binding IsTimerRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Panel.ZIndex="999">
                <Grid.Background>
                    <SolidColorBrush Color="#BF8B7355"/> <!-- Semi-transparent warm brown -->
                </Grid.Background>

                <material:Card VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             UniformCornerRadius="24"
                             Background="{StaticResource SoftTerracottaBrush}"
                             material:ElevationAssist.Elevation="Dp8">
                    <Grid Margin="48">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Width="300" Height="300">
                            <Ellipse Fill="Transparent"
                                    Stroke="#44FFFFFF"
                                    StrokeThickness="8"/>

                            <ProgressBar Value="{Binding TimerProgress}"
                                       Maximum="100"
                                       Style="{StaticResource MaterialDesignCircularProgressBar}"
                                       IsIndeterminate="False"
                                       Foreground="White"/>

                            <TextBlock Text="{Binding TimerCountdown}"
                                     Style="{StaticResource MaterialDesignHeadline2TextBlock}"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock Grid.Row="1"
                                 Text="{Binding TimerTaskName}"
                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                 Foreground="White"
                                 TextAlignment="Center"
                                 Margin="0,32"/>

                        <Button Grid.Row="2"
                                Content="STOP TIMER"
                                Command="{Binding StopTimerCommand}"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="White"
                                Foreground="{StaticResource CozyBrownBrush}"
                                Height="48"
                                material:ButtonAssist.CornerRadius="24"/>
                    </Grid>
                </material:Card>
            </Grid>
        </Grid>
    </Grid>
</Window>