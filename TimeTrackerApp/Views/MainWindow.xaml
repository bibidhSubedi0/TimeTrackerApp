<Window x:Class="TimeTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TimeTrackerApp.ViewModels"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Time Tracker"
        Height="700"
        Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.Lime.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <!-- Main Background -->
        <Grid Background="#FFF5F5F5"/>

        <!-- Main Grid Layout -->
        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Projects Panel -->
            <material:Card Grid.Column="0" Margin="0,0,8,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="PROJECTS"
                               Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,12"/>
                    <ListBox ItemsSource="{Binding Projects}"
                             SelectedItem="{Binding SelectedProject}"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                           Padding="8"
                                           Style="{DynamicResource MaterialDesignBody1TextBlock}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="Add Project"
                            Command="{Binding AddProjectCommand}"
                            Margin="0,16,0,0"
                            Style="{DynamicResource MaterialDesignRaisedButton}" Height="35" Width="256"/>
                </StackPanel>
            </material:Card>

            <!-- Tasks Panel -->
            <material:Card Grid.Column="1" Padding="24" Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tasks Header -->
                    <TextBlock Text="TASKS"
                               Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16"/>

                    <!-- Task List -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <material:Card Margin="0,8" Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Text="{Binding Name}"
                                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                                 Margin="4"
                                                 Grid.Column="0"/>

                                        <TextBox Text="{Binding ExpectedTime}"
                                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                                 Margin="4"
                                                 Grid.Column="1"
                                                 Width="80"/>

                                        <CheckBox IsChecked="{Binding IsCompleted}"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0"
                                                  Grid.Column="2"/>

                                        <Button Content="Start"
                                                Command="{Binding DataContext.StartTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource MaterialDesignContainedButton}"
                                                Margin="8,0"
                                                Grid.Column="3"/>
                                    </Grid>
                                </material:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Add Task Button -->
                    <Button Grid.Row="2"
                            Content="Add Task"
                            Command="{Binding AddTaskCommand}"
                            Style="{DynamicResource MaterialDesignRaisedButton}"
                            Margin="0,24,0,217"
                            HorizontalAlignment="Center" Grid.RowSpan="2" Width="274"/>

                    <!-- Timer Panel -->
                    <material:Card Grid.Row="3"
                                   Margin="0,24,0,0"
                                   Padding="24"
                                   Background="{DynamicResource PrimaryHueLightBrush}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding TimerProjectName}"
                                       Foreground="White"
                                       Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TimerTaskName}"
                                       Foreground="White"
                                       Style="{DynamicResource MaterialDesignBody2TextBlock}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TimerCountdown}"
                                       Foreground="White"
                                       Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
                                       Margin="0,16"
                                       HorizontalAlignment="Center"/>
                            <Button Content="Stop Timer"
                                    Command="{Binding StopTimerCommand}"
                                    Style="{DynamicResource MaterialDesignRaisedButton}"
                                    HorizontalAlignment="Center"/>
                        </StackPanel>
                    </material:Card>
                </Grid>
            </material:Card>

            <!-- Fullscreen Timer Overlay -->
            <Grid Grid.ColumnSpan="2"
                  Visibility="{Binding IsTimerRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Background="#AA000000"
                  Panel.ZIndex="999">
                <material:Card VerticalAlignment="Center" HorizontalAlignment="Center" Padding="48" Background="{DynamicResource PrimaryHueDarkBrush}">
                    <StackPanel>
                        <TextBlock Text="{Binding TimerCountdown}"
                                   Style="{DynamicResource MaterialDesignHeadline2TextBlock}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TimerTaskName}"
                                   Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,12"/>
                        <Button Content="Stop"
                                Command="{Binding StopTimerCommand}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Margin="0,24,0,0"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </material:Card>
            </Grid>
        </Grid>
    </Grid>
</Window>
